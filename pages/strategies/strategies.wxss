.container{
  border-top: 20rpx solid #e5e5e5;
  background-color: white;
  margin-bottom: 20rpx;
}
scroll-view{
  border-bottom: 1rpx solid #e5e5e5;
}
.tag-list{
  padding: 0 40rpx;
  white-space: nowrap;
}
.tag-sel{
  margin: 0 20rpx;
  padding: 10rpx 20rpx;
  display: inline-block;
  border-bottom: 1rpx solid white;
}
.tag-sel.active{
  color: #2e90e7;
  border-bottom: 1rpx solid #2e90e7;
}

.strategy-list {
  display: flex;
  flex-direction: column;
  padding: 0 40rpx;
  margin: 20rpx 0;
  width: 100%;
  box-sizing: border-box;
}
.strategy-item {
  margin: 20rpx 0;
  padding: 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 5rpx;
  box-shadow: 3rpx 3rpx 1rpx #e5e5e5;
  display: block;
  box-sizing: border-box;
}
.top-item{
  display: flex;
  justify-content: space-between;
}
.left-item{
  display: flex;
}
.bottom-item{
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}
.tag-label{
  font-size: 22rpx;
  margin-left: 20rpx;
  border: 1rpx solid #e5e5e5;
  padding: 1rpx 5rpx;
}
.strategy-name{
  max-width: 380rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.strategy-desc{
  width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}