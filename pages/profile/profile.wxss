page{
  background-color: #efefef;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 40rpx 0;
  background: linear-gradient(to right, #348ac7, #577ec3, #7374bf);
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white;
}

.userprofilelist {
  background-color: white;
  width: 100%;
}
.profile-item{
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
button.feedback{
  width: 100%;
  padding:30rpx 40rpx;
  font-size: 28rpx;
  text-align: left;
  border:none;
  border-radius: 0;
  line-height: 1.5;
  background-color: white;
}
button.feedback::after{
  border: none;
  border-radius: 0;
}